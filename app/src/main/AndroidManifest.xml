<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tanphirum.firstapplication">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="developer.android.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:parentActivityName=".MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.DisplayMessageActivity"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".UIKitActivity"
            android:label="@string/title_register" />
        <activity
            android:name=".NewIntentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RecycleViewActivity" />
        <activity android:name=".ViewPagerActivity" />
        <activity android:name=".WebviewActivity" />
        <activity android:name=".AsyncTaskActivity" />
        <activity android:name=".AsyncTaskLoaderActivity" />
        <activity android:name=".Retrofit2Activity" />
        <activity
            android:name=".BroadcastActivity"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name=".receiver.CustomReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <activity android:name=".NotificationActivity" />
        <activity android:name=".SharedPreferenceActivity"></activity>
    </application>

</manifest>